{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "outDir": "dist-ts"
  },
  "include": [
    "models/**/*.ts",
    "controllers/**/*.ts",
    "services/**/*.ts",
    "routes/**/*.ts"
  ]
}

