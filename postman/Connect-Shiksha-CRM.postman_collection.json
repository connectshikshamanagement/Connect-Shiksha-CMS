            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"category\": \"Marketing\",\n  \"amount\": 15000,\n  \"date\": \"2025-10-01\",\n  \"description\": \"Social media advertising campaign\",\n  \"paymentMethod\": \"card\",\n  \"vendorName\": \"Facebook Ads\"\n}",
