        },
        {
          "name": "Create Income (Auto Profit Sharing)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sourceType\": \"Coaching\",\n  \"amount\": 50000,\n  \"date\": \"2025-10-01\",\n  \"description\": \"JEE coaching batch October 2025\",\n  \"paymentMethod\": \"bank_transfer\",\n  \"transactionId\": \"TXN123456\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/income",
              "host": ["{{baseUrl}}"],
              "path": ["income"]
            }
          }
        }
      ]
    },
    {
      "name": "Expenses",
